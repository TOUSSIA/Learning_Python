def User(name, phone_number, id):        
    print("This User Infos Are :".upper())
    print("NAME :", name)
    print("PHONE :", phone_number)
    print("ID :", id)

User_name = input("Please Enter User Name Here : ")              # We Enter The Value of Each Param Manualy by asseign it to a Variable
User_Phone = input("Please Enter User Phone Number Here : ")
User_id = input("Please Enter User ID Here : ")

User(User_name,User_Phone,User_id)                # We Display (MethodName(Variable1,Variable2,Variable3)

