def User(name, phone_numbber, id):      # def MethodName(Param1,Param2,Param3)
    print("This User Infos Are :".upper()) #This is what this method DO 
    print("NAME :", name)
    print("PHONE :", phone_numbber)
    print("ID :", id)
                        

print(User("Ahmed", "0796643919", "9145685"))  # We Display (MethodName(Param1=Value, Param2=Value, Param3=Value)

